@model PeopleApplication.Models.ViewModels.CountryViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddCountry</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h3 style="text-align:center">
        @Html.ActionLink("Home", "ShowAllPeople", "Person")
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <a asp-action="ShowAll">Show All Countrys</a>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <a asp-action="AddCountry">Add New Country</a>
    </h3>
    <hr />
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form asp-action="AddCountry">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card">
                    <div class="card-header">
                        <h4 style="text-align:center">Add Country</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="CrtyName" class="control-label"></label>
                            <input asp-for="CrtyName" class="form-control" />
                            <span asp-validation-for="CrtyName" class="text-danger"></span>
                            <h1>@ViewBag.info</h1>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />

                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
