@model IEnumerable<PeopleApplication.Models.Country>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowAll</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h3 style="text-align:center">
        @Html.ActionLink("Home", "ShowAllPeople", "Person")
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <a asp-action="ShowAll">Show All Countrys</a>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <a asp-action="AddCountry">Add New Country</a>
    </h3> 
    <hr/>
    <table class="table table-bordered">
        <thead>
            <tr>
              <th>Country Code</th>  
                <th>
                   Country Name
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CrtyCode)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CrtyName)
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
