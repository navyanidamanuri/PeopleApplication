
@model PeopleApplication.Models.ViewModels.CreatePersonViewModel

@{ 
    Layout = null;
} 
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddNewPerson</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h3 style="text-align:center">
        <a asp-action="ShowAllPeople">Show All People</a>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <a asp-action="AddNewPerson">Add New Person</a>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <a asp-action="SearchPeople">Search Persons</a>
    </h3>
    <hr />
     <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form asp-action="AddNewPerson">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="card">
                    <div class="card-header">
                        <h4 style="text-align:center">Add New Person</h4>
                    </div>
                    <div class="card-body">
                        <!------
                        <div class="form-group">
                            <label asp-for="Pid" class="control-label"></label>
                            <input asp-for="Pid" class="form-control" />
                            <span asp-validation-for="Pid" class="text-danger"></span>
                        </div>
                            ------>
                        
                        <div class="form-group">
                            Person Name
                            <input asp-for="Pname" class="form-control" />
                            <span asp-validation-for="Pname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            Phone Number
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            City Name
                            <select asp-for="CityCode" class="form-control">
                                @foreach (Cities city in ViewBag.ctinfo)
                                {
                                    <option value="@city.CityCode">@city.CityName</option>
                                }
                                </select>
                                <span asp-validation-for="CityCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>